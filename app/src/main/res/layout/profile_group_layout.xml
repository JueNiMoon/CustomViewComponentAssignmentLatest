<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <com.example.customviewcomponentassignment.views.component.SmartRecyclerView
        android:id="@+id/rv_createuser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/user_item" />

    <com.example.customviewcomponentassignment.views.component.CircularProgressBar
        android:id="@+id/circularprogressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:mStrokeWidth="@dimen/margin_medium_3"
        app:mTextColor="@color/black"
        app:mProgress="70"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_alignParentTop="true"/>

</RelativeLayout>