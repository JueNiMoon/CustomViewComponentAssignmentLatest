<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        android:textColor="@color/white"
        tools:textColor="@color/color_grey"
        android:layout_marginStart="@dimen/margin_medium_2"/>

    <com.example.customviewcomponentassignment.views.component.RoundedCornerImageView
        android:layout_below="@id/txt_Client"
        android:id="@+id/iv_client"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:border_color="@color/white"
        app:border_width="2dp"
        app:cornerRadius = "30dp"
        app:srcCompat="@drawable/profile"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Client"
        android:layout_toEndOf="@id/iv_client"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName"
        android:text="Awsmd Team"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_medium_3"
        android:textColorHint="@color/color_hint_text" />
</RelativeLayout>